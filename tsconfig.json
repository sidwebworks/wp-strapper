{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "checkJs": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "./bin",
    "declaration": false,
    "sourceMap": false
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
